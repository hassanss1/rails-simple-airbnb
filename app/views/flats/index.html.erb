
<h1>All our flats (<%= @flats.count %>)</h1>
<div class="container">
  <div class="row">

      <% @flats.each do |flat|%>
        <div class="col-sm-4">
          <h2><%= flat.name %></h2>
          <%= flat.address %>
          <div class="row ml-0">
            <%= flat.price_per_night %>
            <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
          </div>
          <%= link_to 'More Info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'ml-3 text-warning' %>
          <%= link_to 'Delete flat', flat_path(flat),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'ml-3 text-danger'
          %>
        </div>
      <% end %>
  </div>
</div>

